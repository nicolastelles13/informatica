
package vuelotaller4;

public class VueloTaller4 {

  
    public static void main(String[] args) {
       int moneda = 0;
       Vuelo pabellon = new Vuelo(moneda);
       
       pabellon.caminos();
       pabellon.caminos2();
       pabellon.caminos3();
       pabellon.caminos4();
       pabellon.caminos5();
    }
    
}

